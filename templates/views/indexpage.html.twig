{% extends 'base.html.twig' %}
{% block title %}TinyStore - Home{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
                <div class="d-flex flex-column flex-shrink-0 p-3 bg-light mt-4" style="width: 280px;">
                    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                        <span class="fs-4">Categories</span>
                    </a>
                    <hr>
                    <ul class="nav nav-pills flex-column mb-auto">
                        {% for category in categories %}
                            <li class="nav-item">
                                <a href="{{ path('category_page', {id: category.id}) }}" class="nav-link" style="font-size: 1.1rem" aria-current="page">
                                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"></use></svg>
                                    {{ category.name }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                    <hr>
                </div>
            </div>
            <div class="col-10 d-flex flex-wrap">
                {% for good in goods %}
                    <div class="card mt-4" style="width: 18rem; margin-right: 20px">
                        <div class="card-body">
                            <h4 class="card-title"><a href="{{ path('good_page', {id: good.id}) }}">{{ good.name }}</a></h4>
                            <h6 class="card-subtitle mb-2 text-muted">{{ good.idcategory.name }}</h6>
                            <p class="card-text">{{ good.description }}</p>
                            <p class="card-text">{{ good.image }}</p>
                            <span class="badge bg-primary" style="font-size: 1.25rem">{{ good.price/100 }} UAH</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}